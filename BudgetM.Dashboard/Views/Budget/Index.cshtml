	<h2 class="fw-bold mb-4">Monthly Kakeibo Budget Summary</h2>

	<div class="row">

		<div class="col-sm-6">

			<div class="card border-secondary mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<div class="accordion-item">

						<h2 class="accordion-header">
							<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-needs" aria-expanded="true" aria-controls="panelsStayOpen-needs">
								<h5>Needs</h5>
							</button>
						</h2>


						<div id="panelsStayOpen-needs" class="accordion-collapse collapse show">
							<div class="accordion-body">
								<div class="card-body text-black">
									<table class="table table-hover">
										@foreach (var item in needs)
										{
											<tr>
												<td class="align-middle">@item.BudgetName</td>
												<td class="text-end align-middle">@item.BudgetPrice</td>
												<td class="text-end" style="width: 5%">
													<div class="dropdown">
														<a class="btn" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
															<i class="fa-solid fa-ellipsis"></i>
														</a>

														<ul class="dropdown-menu">
															<li><a class="dropdown-item" href="/BudgetCreate/?id=@item.Id">Düzenle</a></li>
															<li><a class="dropdown-item" href="/BudgetDelete/?id=@item.Id">Sil</a></li>
														</ul>
													</div>
												</td>

											</tr>
										}
									</table>
									<h6 class="card-title text-end fw-bold">Total Needs: @needs.Sum(x => x.BudgetPrice) </h6>
								</div>
							</div>
						</div>

					</div>
				</div>

			</div>

		</div>

